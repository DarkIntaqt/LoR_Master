{
  "name": "lor-master-tracker",
  "productName": "LoR Master Tracker",
  "version": "0.9.13",
  "private": true,
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/shaobaili3/LoR_Master"
  },
  "scripts": {
    "dev": "vue-cli-service build && electron app.js",
    "dev-hidden": "vue-cli-service build && electron app.js --hidden",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "deploy": "deploy.sh",
    "start": "electron app.js",
    "package": "electron-packager ./ LoRMasterTracker --out ./app --app-version %npm_package_version% --overwrite --icon=image.ico",
    "build-installer": "electron-builder",
    "build-pack": "electron-builder --dir",
    "build-pub": "electron-builder -p always"
  },
  "build": {
    "appId": "com.lor-master-tracker.tracker",
    "productName": "LoRMasterTracker",
    "directories": {
      "output": "build"
    },
    "files": [
      "**/*",
      "dist/*"
    ],
    "extraFiles": [
      {
        "from": "./backend/",
        "to": "backend/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "image.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "installerIcon": "image.ico",
      "uninstallerIcon": "uninstall.ico",
      "license": "LICENSE",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "LoR Master Tracker"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "auto-launch": "^5.0.5",
    "axios": "^0.21.1",
    "core-js": "^3.6.5",
    "detect-port": "^1.3.0",
    "electron-log": "^4.4.1",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.3.9",
    "runeterra": "^2.0.0",
    "tasklist": "^4.0.1",
    "vue": "^3.0.0",
    "vue-i18n": "^9.2.0-beta.7",
    "vue-router": "^4.0.3",
    "vuex": "^4.0.0-rc.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "electron": "^15.1.0",
    "electron-builder": "^22.11.7",
    "electron-packager": "^15.2.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.0-0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-unused-vars": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
